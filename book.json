{
    "plugins": [
        "atoc",
        "splitter",
        "anchors",
        "github",
        "editlink"
    ],
    "pluginsConfig": {
        "fontSettings": {
            "theme": "sepia", "night" or "white",
            "family": "serif" or "sans",
            "size": 1 to 4
        },
        "editlink": {
          "base": "https://github.com/danster/blog/edit/master",
          "label": "Edit",
          "multilingual": false
        },
        "github": {
            "url": "https://github.com/danster/blog"
        }
    }
}