{
    "title": "Danster's Blog",
    "description": "Technology Blog",
    "generator": "website",
    "styles": {
        "website": "styles/website.css",
    },  
    
    "plugins": [
        "atoc",
        "splitter",
        "anchors",
        "github",
        "editlink"
    ],
    
    "pluginsConfig": {
        "editlink": {
          "base": "https://github.com/danster/blog/edit/master",
          "label": "EDIT",
          "multilingual": false
        },
        "github": {
            "url": "https://github.com/danster/blog"
        }
    },
    
    // Variables for templating
    "variables": {},

    // Links in template (null: default, false: remove, string: new value)
    "links": {
        // Custom links at top of sidebar
        "sidebar": {
            "wb": "https://weibo.com",
        },

        // Sharing links
        "sharing": {
            "google": false,
            "facebook": false,
            "twitter": false,
            "weibo": null,
            "all": null
        }
    },
}